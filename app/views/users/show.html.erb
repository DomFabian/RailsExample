<%= provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>

<p><small>
  User created:
  <%= @user.created_at %>
</small></p>
<p><small>
  Last modified:
  <%= @user.updated_at %>
</small></p>
<p><small>
  Page viewed at:
  <%= Time.now %>
</small></p>